{
  "version": 2,
  "outputDirectory": "public",
  "functions": {
    "api/**/*.php": { 
      "runtime": "vercel-php@0.7.4",
      "maxDuration": 30
    }
  },
  "routes": [
    { "src": "/(.*)", "dest": "/api/index.php" }
  ],
  "env": {
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "APP_URL": "https://edubridge-lyart.vercel.app",
    "LOG_CHANNEL": "errorlog",
    "LOG_LEVEL": "error",
    "CACHE_STORE": "array",
    "SESSION_DRIVER": "array",
    "QUEUE_CONNECTION": "sync"
  }
}
